<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_swa_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hl.swa.SwaMainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:id="@+id/city" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/city"
        android:layout_marginStart="38dp"
        android:id="@+id/date" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:id="@+id/forecast" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/background_dark"
        android:layout_below="@+id/forecast"
        android:layout_alignStart="@+id/city"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:id="@+id/weatherIcon"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:minHeight="100dp"
        android:minWidth="100dp"/>

    <TextView
        android:text="34ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTemp"
        android:width="77dp"
        android:textSize="36sp"
        android:layout_alignTop="@+id/weatherIcon"
        android:layout_toEndOf="@+id/date"/>

    <TextView
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherDescription"
        android:width="100dp"
        android:textSize="18sp"
        android:layout_below="@+id/weatherIcon"
        android:layout_alignStart="@+id/city"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/minTemp"
        android:textAlignment="center"/>

    <TextView
        android:text="66.70 kPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:layout_alignBaseline="@+id/labelPressure"
        android:layout_alignBottom="@+id/labelPressure"
        android:layout_toEndOf="@+id/city"
        android:layout_marginStart="12dp"/>

    <TextView
        android:text="Pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPressure"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/weatherDescription"/>

    <TextView
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelHumidity"
        android:layout_below="@+id/labelPressure"
        android:layout_alignStart="@+id/labelPressure"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="Wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelWind"
        android:layout_below="@+id/labelHumidity"
        android:layout_alignStart="@+id/labelHumidity"
        android:layout_marginTop="11dp"/>

    <TextView
        android:text="Sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSunrise"
        android:layout_below="@+id/labelWind"
        android:layout_alignStart="@+id/labelWind"
        android:layout_marginTop="12dp"/>

    <TextView
        android:text="Sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSunset"
        android:layout_below="@+id/labelSunrise"
        android:layout_alignStart="@+id/labelSunrise"
        android:layout_marginTop="13dp"/>

    <TextView
        android:text="66%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:layout_alignBaseline="@+id/labelHumidity"
        android:layout_alignBottom="@+id/labelHumidity"
        android:layout_alignStart="@+id/pressure"/>

    <TextView
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wind"
        android:layout_alignBaseline="@+id/labelWind"
        android:layout_alignBottom="@+id/labelWind"
        android:layout_alignStart="@+id/humidity"/>

    <TextView
        android:text="6:12 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunrise"
        android:layout_alignBaseline="@+id/labelSunrise"
        android:layout_alignBottom="@+id/labelSunrise"
        android:layout_alignStart="@+id/wind"/>

    <TextView
        android:text="8:57 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunset"
        android:layout_alignBaseline="@+id/labelSunset"
        android:layout_alignBottom="@+id/labelSunset"
        android:layout_alignStart="@+id/sunrise"/>

    <TextView
        android:text="km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windSpeed"
        android:layout_alignBaseline="@+id/wind"
        android:layout_alignBottom="@+id/wind"
        android:layout_alignEnd="@+id/sunrise"/>

    <TextView
        android:text="NO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windDirection"
        android:layout_alignBaseline="@+id/windSpeed"
        android:layout_alignBottom="@+id/windSpeed"
        android:layout_toStartOf="@+id/currentTemp"/>

    <TextView
        android:text="35ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        android:width="25dp"
        android:layout_below="@+id/currentTemp"
        android:layout_alignStart="@+id/currentTemp"/>

    <TextView
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/currentTemp"
        android:layout_toEndOf="@+id/maxTemp"
        android:width="9dp"/>

    <TextView
        android:text="26ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTemp"
        android:width="23dp"
        android:layout_below="@+id/currentTemp"
        android:layout_toEndOf="@+id/textView6"/>

</RelativeLayout>
